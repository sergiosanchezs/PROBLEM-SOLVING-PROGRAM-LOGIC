# variables! Dynamic
age = 27
money = 23.46
name = "Sergio"
print(age, money, name)
print('My name is ', name, 'and I am ', age, 'years old\nand I have', money, ' Dollars')
print('My name is %s and I am %d years old \n and I have %.1f Dollars' %(name,age,money))
print('My name is {} and I am {} years old\nand I have {} Dollars'.format(name,age,money))
print(Template('- My name is ${name} and I am ${age} years old \n and I have ${money} Dollars').substitute(name=name, age=age, money=money))

